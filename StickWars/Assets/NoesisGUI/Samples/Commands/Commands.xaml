<Grid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    xmlns:noesis="clr-namespace:Noesis">
    
    <Grid.Resources>
        <noesis:ViewModel x:Key="ViewModel"/>
    </Grid.Resources>

    <Border x:Name="myBorder" DataContext="{StaticResource ViewModel}"
        Background="Black" BorderThickness="1" CornerRadius="5" BorderBrush="Black" Padding="5"
        HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Vertical">
            <TextBox MinWidth="300" Margin="3" Text="{Binding Input, Mode=TwoWay}" FontSize="28"/>
            <Button Content="Say Hello" Margin="3" Command="{Binding SayHelloCommand}" FontSize="28" />
            <TextBlock Margin="5" Padding="10" TextAlignment="Center" Text="{Binding Output}" FontSize="28" Foreground="White"/>
        </StackPanel>
    </Border>

</Grid>

