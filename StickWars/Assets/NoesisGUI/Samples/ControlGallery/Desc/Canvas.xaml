<StackPanel
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
  Margin="0,40,0,0">

	<Grid x:Name="DescTitleGroup" Margin="0,0,0,24">
		<TextBlock x:Name="DescTitleShadow" TextWrapping="{Binding TextWrapping, ElementName=DescTitle}" Text="{Binding Text, ElementName=DescTitle}" FontSize="{Binding FontSize, ElementName=DescTitle}" TextAlignment="{Binding TextAlignment, ElementName=DescTitle}" Foreground="{DynamicResource NoesisPopupShadow2Brush}" Margin="3,2,0,0"/>
		<TextBlock x:Name="DescTitle" TextWrapping="Wrap" Text="Canvas Sample" FontSize="24" TextAlignment="Center" Foreground="{DynamicResource NoesisBdBrush}" VerticalAlignment="Top"/>
	</Grid>

	<StackPanel x:Name="DescContent" Orientation="Vertical" Margin="8,0">
		<TextBlock TextWrapping="Wrap" Text="This sample shows the layout possibilities of a Canvas panel." Margin="0,0,0,8"/>
		<TextBlock TextWrapping="Wrap" Text="Child elements of a Canvas are never resized by canvas layout, they are just positioned at their designated coordinates." Margin="0,0,0,8"/>
		<TextBlock TextWrapping="Wrap" Text="Position of children elements is controlled by the Canvas.Left, Canvas.Right, Canvas.Top and Canvas.Bottom attached properties." Margin="0,0,0,8"/>
	</StackPanel>

</StackPanel>